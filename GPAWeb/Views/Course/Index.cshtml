<input type="button"  class="btn btn-small btn-primary"  value="New Course" data-bind="click: $root.createCourse" />
<input type="button"  class="btn btn-small btn-primary"  value="Import File" data-bind="click: importFromFile" />
<hr />
<div id="loadingScreen"></div>
<table class="table table-striped table-bordered table-condensed">
    <tr> 
        <th>Name</th>
        <th>Organization</th>
        <th>Course Number</th>
        <th>Credit Hour</th>
        <th>Clock Hour</th>
        <th></th>
    </tr>
    <tbody data-bind="foreach: Courses">
        <tr>
            <td class="name"><a data-bind="click: $parent.editCourse, text: Name"></a></td>
            <td data-bind = "text: OrganizationName"></td>
            <td data-bind="text: Number"></td>
            <td data-bind="text: CreditHour"></td>
            <td data-bind="text: ClockHour"></td>
            <td><button class="btn btn-mini btn-danger" data-bind="click: $parent.removeCourse">remove</button></td>
        </tr>
    </tbody>
</table>



